@model IEnumerable<WMS.Models.CompanyVM>

@{
    ViewData["Title"] = "Index";
}


<hr/>

<a asp-action="Create" class="btn btn-success"
   onclick="return check()">
    <i class="fa fa-plus" aria-hidden="true"></i>
</a>

    <div class="row">

        <div class="col">


            @foreach (var item in Model)
            {
                <!-- Card -->
                <div class="container" id="elementId">
                    <div class="card shadow-lg p-3 mb-5 bg-white rounded text-center" style="width:300px">
                        <img class="card-img-top" src="~/img/company256.png" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(modelItem => item.CompanyName)</h4>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.CorporateOffice)</p>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="fa fa-pen" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">
                                <i class="fa fa-info" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to Delete this record?')">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>


            }
        </div>
        

    </div>

        @section Scripts{
            <script>
                function check() {
                    if ($('#elementId').length > 0) {
                        alert('You are entitled to only create only ONE Company!');
                        return false;
                    }
                   
                }

            </script>
        }
